{
  "name": "janisbiz/light-orm",
  "description": "Light ORM for database integrations",
  "keywords": [
    "janisbiz",
    "orm",
    "database",
    "mysql"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Janis Bizkovskis"
    }
  ],
  "require": {
    "php": ">=5.6",
    "ext-pdo": "*",
    "janisbiz/heredoc": "^1.0"
  },
  "require-dev": {
    "behat/behat": "^3.5",
    "jakub-onderka/php-parallel-lint": "^1.0",
    "phpmd/phpmd": "^2.6",
    "phpro/grumphp": "^0.14.3",
    "phpunit/phpunit": "^5.7",
    "squizlabs/php_codesniffer": "^3.4",
    "symfony/var-dumper": "^3.4",
    "symfony/yaml": "^3.4",
    "wimg/php-compatibility": "^9.1"
  },
  "autoload": {
    "psr-4": {
      "Janisbiz\\LightOrm\\": "src/",
      "Janisbiz\\LightOrm\\Tests\\": "tests/",
      "Janisbiz\\LightOrm\\Variable\\": "var/light-orm/"
    }
  },
  "scripts": {
    "post-install-cmd": "\"./vendor/bin/phpcs\" --config-set installed_paths vendor/wimg/php-compatibility",
    "post-update-cmd" : "\"./vendor/bin/phpcs\" --config-set installed_paths vendor/wimg/php-compatibility"
  },
  "config": {
    "sort-packages": true
  }
}
